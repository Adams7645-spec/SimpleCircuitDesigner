<Window x:Class="SimpleCircuitDesigner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleCircuitDesigner"
        mc:Ignorable="d"
        Title="MainWindow" Height="716" Width="1280">
    <Canvas>
        <!--
            На canvas'е будет находиться 
            интерактивная сетка объектов 
        -->
        <Grid Height="716" Width="1280">
            <Grid.ColumnDefinitions>
                <!--
                    В этом столбце поместить 
                    панель для выбора элементов
                    электрической цепи
                -->
                <ColumnDefinition Width="275"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <!--
                        Строка для расположения кнопок 
                        переключения режимов:
                        редактирование и симуляция
                    -->
                    <RowDefinition Height="75"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
            </Grid>
        </Grid>
    </Canvas>
</Window>
